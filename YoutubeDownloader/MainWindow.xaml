<Window x:Class="YoutubeDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeDownloader" 
        xmlns:views="clr-namespace:YoutubeDownloader.Views"
        xmlns:vms="clr-namespace:YoutubeDownloader.ViewModels"
        mc:Ignorable="d"
        Title="YoutubeDownloader" Height="450" Width="800">
    <Grid Margin="20 10">
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:DownloadViewModel}">
                <views:DownloadView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:AboutViewModel}">
                <views:AboutView />
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}" />

    </Grid>
</Window>
